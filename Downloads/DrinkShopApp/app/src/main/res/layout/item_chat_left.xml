<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"

    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tvEmail"
            android:textSize="18dp"
            android:visibility="gone"
            android:text="dat@gmail.com"
            android:layout_marginLeft="10dp"
            android:textColor="#EDEDED"
            android:textStyle="bold"
            android:layout_height="wrap_content">

        </TextView>
        <com.daasuu.bl.BubbleLayout
            android:layout_width="wrap_content"

            android:padding="8dp"
            app:bl_bubbleColor="@color/white"
            app:bl_arrowDirection="left"
            app:bl_arrowHeight="8dp"
            app:bl_arrowPosition="16dp"
            app:bl_arrowWidth="8dp"
            app:bl_cornersRadius="6dp"

            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvChatMessage"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:textColor="#595858"

                android:text="có ai ở đó không tôi đang ở đây nè, hih hihi hihi hihi hih hihi"
                android:layout_height="wrap_content">

            </TextView>

        </com.daasuu.bl.BubbleLayout>
        <TextView
            android:id="@+id/tvTime"
            android:text="5 minutes"
            android:textSize="11dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
</LinearLayout>